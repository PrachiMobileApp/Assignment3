<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activitybackground"
    android:id="@+id/board"
    android:layout_gravity="center"
    tools:context="edu.neu.madcourse.prachisharma.PhaseTwoActivity">\

    <GridLayout
        android:id="@+id/gridlayoutphase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@drawable/shadow">

        <TextView
            android:id="@+id/ScoreTextPhase2"
            style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
            android:layout_width="84dp"
            android:layout_height="36dp"
            android:layout_column="0"
            android:layout_row="0"
            android:fontFamily="casual"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timeCheckPhase2"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:layout_column="2"
            android:layout_row="0" />

        <Button
            android:id="@+id/Button1P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_row="1" />

        <Button
            android:id="@+id/Button4P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="1" />

        <Button
            android:id="@+id/Button6P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="1" />

        <Button
            android:id="@+id/Button5P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_row="2" />

        <Button
            android:id="@+id/Button2P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="2" />

        <Button
            android:id="@+id/Button9P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"

            android:layout_row="2" />

        <Button
            android:id="@+id/Button7P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_row="3" />

        <Button
            android:id="@+id/Button8P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="3" />

        <Button
            android:id="@+id/Button3P2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="3" />

        <Button
            android:id="@+id/selectButtonPhase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Select"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="401dp" />


        <Button
            android:id="@+id/mutephase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="4"
            android:text="Mute"
            android:onClick="muteBackgroundMusic"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/pauseButtonPhase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="4"
            android:onClick="onPause"
            android:text="Pause"
            android:textColor="@color/colorPrimary" />

    </GridLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="SCROGGLE"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="25dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.502" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Phase : 2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="30dp"
            app:layout_constraintRight_toRightOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginRight="30dp" />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>



